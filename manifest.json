{
  "manifest_version": 3,
  "name": "Discord Token Login (Unofficial)",
  "version": "1.0",
  "description": "Logs into Discord using an authentication token. Use with extreme caution and understand the risks!",
  "permissions": [
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

